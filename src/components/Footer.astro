---
import fluentFlyoutTitle from "../assets/FluentFlyoutTitle.webp"
---

<footer class="bg-gray-800/50 backdrop-blur-sm border-t border-gray-700/50">
	<div class="container mx-auto px-4 sm:px-6 py-12 font-segoe-ui-variable-display">
		<!-- Footer Grid -->
		<div class="grid grid-cols-1 md:grid-cols-3 gap-8 mb-8">
			<!-- Brand Section -->
			<div class="text-center md:text-left">
				<img
					src={fluentFlyoutTitle.src}
					alt="FluentFlyout Logo"
					class="h-8 mx-auto md:mx-0 mb-3"
				/>
				<p class="text-gray-400 text-sm">
					The modern, open source Flyout for Windows 11
				</p>
			</div>

			<!-- Quick Links -->
			<div class="text-center">
				<h3 class="text-white font-semibold mb-3">Quick Links</h3>
				<div class="flex flex-col space-y-2">
					<a
						href="https://github.com/unchihugo/FluentFlyout"
						target="_blank"
						class="text-gray-400 hover:text-primary transition text-sm"
						>GitHub</a
					>
					<a
						href="https://github.com/unchihugo/FluentFlyout/issues/new?template=bug_report.md"
						target="_blank"
						class="text-gray-400 hover:text-primary transition text-sm"
						>Report issue</a
					>
					<a
						href="https://github.com/unchihugo/FluentFlyout/issues/new?template=feature_request.md"
						target="_blank"
						class="text-gray-400 hover:text-primary transition text-sm"
						>Request feature</a
					>
					<a
						href="https://hosted.weblate.org/engage/fluentflyout/"
						class="text-gray-400 hover:text-primary transition text-sm"
						>Help translate</a
					>
				</div>
			</div>

			<!-- Community -->
			<div class="text-center md:text-right">
				<h3 class="text-white font-semibold mb-3">Community</h3>
				<div class="flex justify-center md:justify-end space-x-4 mb-3">
					<a
						href="https://github.com/unchihugo/FluentFlyout"
						target="_blank"
						class="text-gray-400 hover:text-white transition transform hover:scale-110">
						<svg
							class="w-6 h-6"
							fill="currentColor"
							viewBox="0 0 16 16">
